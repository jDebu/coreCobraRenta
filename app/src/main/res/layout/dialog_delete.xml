<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dialog_body">

    <TextView
        android:id="@+id/alertTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_title_delete"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:id="@+id/alertContent"
        android:text="@string/alert_content_delete"
        android:layout_below="@+id/alertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>
    <Button
        android:background="@null"
        android:textAllCaps="false"
        android:id="@+id/aceptar"
        android:text="Aceptar"
        android:layout_below="@+id/alertContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/cancelar"
        android:background="@null"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/aceptar"
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>